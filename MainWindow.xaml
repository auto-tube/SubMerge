<mah:MetroWindow x:Class="AutoTubeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTubeWpf"
        xmlns:viewmodels="clr-namespace:AutoTubeWpf.ViewModels"
        xmlns:views="clr-namespace:AutoTubeWpf.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" <!-- Added MahApps namespace -->
        mc:Ignorable="d"
        Title="AutoTube WPF" Height="850" Width="1200" MinHeight="800" MinWidth="1000"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}" <!-- Optional: Add window glow -->
        BorderThickness="1" BorderBrush="{DynamicResource MahApps.Brushes.Accent}"> <!-- Optional: Add border -->

    <!-- DataContext is set in App.xaml.cs -->

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Progress Bar Area -->
            <RowDefinition Height="*"/>    <!-- Tab Control Area -->
            <RowDefinition Height="Auto"/> <!-- Status Bar Area -->
        </Grid.RowDefinitions>

        <!-- Progress Bar Area -->
        <!-- Using MahApps Progress Bar -->
        <mah:MetroProgressBar Grid.Row="0" Value="{Binding ProgressValue}" Minimum="0" Maximum="1" Height="10" Margin="5,5,5,10"/>
        <!-- Removed Border and TextBlock for progress, integrated into status bar -->

        <!-- Tab Control Area -->
        <!-- Using MahApps TabControl -->
        <mah:MetroTabControl Grid.Row="1" Margin="0,0,0,0">
            <mah:MetroTabItem Header="Video Clipper">
                <views:ClippingView DataContext="{Binding ClippingVM}" />
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="AI Short Generator">
                 <views:AiShortView DataContext="{Binding AiShortVM}" />
           </mah:MetroTabItem>
            <mah:MetroTabItem Header="Metadata Tools">
                 <views:MetadataView DataContext="{Binding MetadataVM}" />
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="Settings">
                <views:SettingsView DataContext="{Binding SettingsVM}" />
            </mah:MetroTabItem>
        </mah:MetroTabControl>

        <!-- Status Bar Area -->
        <StatusBar Grid.Row="2" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
             <StatusBarItem HorizontalAlignment="Right">
                 <TextBlock Text="{Binding EstimatedTime}" Margin="10,0,0,0"/>
             </StatusBarItem>
        </StatusBar>

    </Grid>
</mah:MetroWindow>