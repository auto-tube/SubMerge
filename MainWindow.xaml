<Window x:Class="AutoTubeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTubeWpf"
        xmlns:viewmodels="clr-namespace:AutoTubeWpf.ViewModels"
        xmlns:views="clr-namespace:AutoTubeWpf.Views" <!-- Added namespace for Views -->
        mc:Ignorable="d"
        Title="AutoTube WPF" Height="850" Width="1200" MinHeight="800" MinWidth="1000">

    <!-- DataContext is set in App.xaml.cs now, removing explicit instantiation here -->
    <!--
    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>
    -->

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Progress Bar Area -->
            <RowDefinition Height="*"/>    <!-- Tab Control Area -->
            <RowDefinition Height="Auto"/> <!-- Status Bar Area -->
        </Grid.RowDefinitions>

        <!-- Progress Bar Area -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Progress:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ProgressBar Grid.Column="1" Value="{Binding ProgressValue}" Minimum="0" Maximum="1" Height="20" Margin="5,0"/>
                <TextBlock Grid.Column="2" Text="{Binding EstimatedTime}" VerticalAlignment="Center" Margin="5,0,0,0" MinWidth="150" TextAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Tab Control Area -->
        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Video Clipper">
                <!-- Replaced placeholder with ClippingView -->
                <views:ClippingView DataContext="{Binding ClippingVM}" />
            </TabItem>
            <TabItem Header="AI Short Generator">
                <!-- Replaced placeholder with AiShortView -->
                 <views:AiShortView DataContext="{Binding AiShortVM}" />
           </TabItem>
            <TabItem Header="Metadata Tools">
                <!-- Replaced placeholder with MetadataView -->
                 <views:MetadataView DataContext="{Binding MetadataVM}" />
            </TabItem>
            <TabItem Header="Settings">
                <!-- Replaced placeholder with SettingsView -->
                <views:SettingsView DataContext="{Binding SettingsVM}" />
            </TabItem>
        </TabControl>

        <!-- Status Bar Area -->
        <StatusBar Grid.Row="2" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>